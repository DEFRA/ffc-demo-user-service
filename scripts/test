#!/usr/bin/env sh

set -e
projectRoot="$(a="/$0"; a=${a%/*}; a=${a:-.}; a=${a#/}/; cd "$a/.." || return; pwd)"

show_help() {
  echo "
Run automated tests.

Usage: scripts/test [OPTION...] [-- [DOCKER_OPTION...]]

Options:
  -b, --build  build container images before running tests
  -h, --help   display this help text

Docker options:
  Any arguments after '--' are passed through to 'docker-compose down'.
"
}

while :; do
  case $1 in
    -b|--build)
      build="true"
      ;;

    -h|--help)
      show_help
      exit 0
      ;;

    --)
      shift
      break
      ;;

    -?*)
      echo "Unrecognised argument: $1"
      show_help
      exit 1
      ;;

    *)
      break
  esac

  shift
done

compose() {
  (
    cd "${projectRoot}"

    docker-compose -p ffc-demo-user-service-test -f docker-compose.yaml -f docker-compose.test.yaml $@
  )
}

(
  cd "${projectRoot}"

  # Guarantee clean environment
  compose down --volumes

  # Build test images
  if [ "${build}" = "true" ]; then
    compose build
  fi

  # Run tests
  compose run ffc-demo-user-service

  # Clean up
  compose down --volumes
)
